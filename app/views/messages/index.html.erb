<div class="col-md-6 col-md-offset-3">
<div class="bigbox">
	<div class="box">
		<%  @messages.each do |message| %>

			 <div class="message">
				<span class="list-group-item"><div class="top-message"></span>
					<li class="writing"><%= message.message.body %></li>
				</div>


				<div class="bottom-message">
					<span>From </span><b><i><%= message.message.sender.username %></b></i>
				</div>
			</div>
		<% end %>
	</div>
</div>
</div>